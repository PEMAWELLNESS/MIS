        function LoadData(dated) {
            debugger;
            $.ajax({
                type: "POST",
                data: { dated },
                url: "/Treatment/Guestwisegraph",
                //data: "id=",
                success: function (data) {
                    debugger;
                    var locdata = new Array();
                    for (var i = 0; i < data.length; i++) {
                        locdata.push({
                            name: data[i].Key,
                            y: data[i].Value,
                            drilldown: false
                        });
                    }
                    BindData(locdata);

                },
                error: function () {
                    // alert("error")
                }
            });
        }
        function BindData(locations) {
            $('#container').highcharts({
                chart: {
                    type: 'column',
                    events: {
                        drilldown: function (e) {
                            if (!e.seriesOptions) {

                                var chart = this;
                                chart.showLoading('Simulating Ajax ...');
                                var series = Getseries(e.point.name, chart, e.point);
                                // Show the loading label

                            }
                        }
                    }
                },
                title: {
                    text: 'Guest Wise Graph'
                },
                xAxis: {
                    type: 'category'
                },
                yAxis: {
                    title: {
                        text: 'Treatments'
                    }

                },
                legend: {
                    enabled: false
                },
                plotOptions: {
                    series: {
                        borderWidth: 0,
                        dataLabels: {
                            enabled: true
                        }
                    }
                },
                credits: {
                    enabled: false
                },
                series: [{
                    cursor: 'pointer',
                    point: {
                        events: {
                            click: function () {
                                guestlist(this.name, $("#scheduledate").val());
                                $('#guest').val(this.name);
                                // alert(this.name)
                            }
                        },
                    },
                    name: 'Count',
                    colorByPoint: true,
                    data: locations
                }],
                drilldown: {
                    series: []
                }
            });
        }
        function guestlist(name, Date) {
            debugger;
            $('#guest').val(name);
            var wallcode = name;
            var postData = {
                Guestname: wallcode,
