                        });
                    }
                    var sttt = "Employees with Designation are";
                    $(".tbb").remove();
                    var $table = $('<table/>');
                    $table.addClass("table table-bordered table-hover table-striped tbb");
                    $table.append(' <th style="text-align:center!important;">PRNO</th><th style="text-align:center!important;">Guest Name</th><th style="text-align:center!important;">Treatment Name</th>');
                    for (var i = 0; i < locdata.length; i++) {
                        //debugger;

                        $table.append('<tr><td>' + locdata[i].PRNO + '</td><td>' + locdata[i].GuestName + '</td><td>' + locdata[i].TreatName + '</td></tr>');
                        $('#emplist').append($table);

                    }
                    $('#emplist').show();
                }
            });
        }
