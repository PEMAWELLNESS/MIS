                //data: "id=",
                success: function (result) {
                    debugger;
                    var locdata = new Array();
                    for (var i = 0; i < result.length; i++) {
                        locdata.push({
                            PRNO: result[i].PRNO,
                            GuestName: result[i].GuestName,
